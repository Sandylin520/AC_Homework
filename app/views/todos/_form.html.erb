<% if @todo.errors.present? %>
  <ul>
    <% @todo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>
  <%= f.label :task, "項目" %>
  <%= f.text_field :task %>

  <%= f.label :note, "內容" %>
  <%= f.text_field :note %>

  <%= f.label :due_date, "到期日"%>
  <%= f.text_field :due_date %>

  <%= f.submit "送出"%>

<% end %>
